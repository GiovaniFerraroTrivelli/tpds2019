<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="dominio.Pago" table="pagos">

        <id name="idPago" type="java.lang.Integer" column="id_cuota">
            <generator class="native"/>
        </id>

        <many-to-one name="usuario" class="dominio.Usuario" fetch="select">
            <column name="id_usuario" not-null="true" />
        </many-to-one>

        <many-to-one name="usuario" class="dominio.Usuario" fetch="select">
            <column name="id_usuario" not-null="true" />
        </many-to-one>

		<property name="fechaHora" column="fecha"/>
		<property name="fechaVencimiento" column="fecha_vencimiento"/>
        
		<!-- relacion entre la poliza y los hijos -->
		<set name="cuotas" table="pago_cuotas" inverse="true" cascade="save-update" lazy="false" fetch="select">
			<key>
				<column name="id_pago" not-null="true" />
			</key>
			<one-to-many class="dominio.Hijo" />
		</set>

    </class>
</hibernate-mapping>